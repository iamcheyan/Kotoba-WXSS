.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 48rpx 40rpx 64rpx;
  box-sizing: border-box;
  background-image: linear-gradient(150deg, #1f2937 0%, #0f172a 80%);
  color: #f8fafc;
}

.header {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.title {
  font-size: 50rpx;
  font-weight: 700;
  text-align: center;
  letter-spacing: 4rpx;
}

.dictionary-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(30, 41, 59, 0.8);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
}

.dictionary-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #e2e8f0;
}

.dictionary-button {
  padding: 0 28rpx;
  background: linear-gradient(135deg, #38bdf8, #6366f1);
  color: #0f172a;
  border-radius: 999rpx;
  border: none;
}

.dictionary-button::after {
  border: none;
}

.stats {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #cbd5f5;
}

.badge {
  padding: 4rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(34, 197, 94, 0.2);
  color: #4ade80;
  font-size: 24rpx;
}

.card {
  margin-top: 48rpx;
  background: rgba(15, 23, 42, 0.78);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.45);
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.kanji {
  font-size: 72rpx;
  font-weight: 700;
  text-align: center;
  letter-spacing: 6rpx;
  color: #f8fafc;
}

.card-divider {
  width: 120rpx;
  height: 6rpx;
  border-radius: 999rpx;
  margin: 0 auto;
  background: linear-gradient(90deg, rgba(59, 130, 246, 0.6), rgba(167, 139, 250, 0.6));
}

.meaning {
  font-size: 30rpx;
  line-height: 1.7;
  color: #cbd5f5;
  text-align: center;
  word-break: break-word;
}

.meaning.placeholder {
  color: #94a3b8;
  font-style: italic;
}

.card-actions {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 20rpx;
}

.action {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.action::after {
  border: none;
}

.primary {
  grid-column: span 2;
  background: linear-gradient(135deg, #38bdf8, #6366f1);
  color: #0f172a;
}

.success {
  background: rgba(34, 197, 94, 0.18);
  color: #4ade80;
}

.warn {
  background: rgba(248, 113, 113, 0.18);
  color: #fca5a5;
}

.ghost {
  background: rgba(148, 163, 184, 0.16);
  color: #cbd5e1;
}

.empty {
  margin-top: 160rpx;
  text-align: center;
  font-size: 32rpx;
  color: #94a3b8;
}

.footer {
  margin-top: auto;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-top: 48rpx;
}

.footer-buttons {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.footer-btn {
  flex: 1;
  min-width: 280rpx;
  border-radius: 18rpx;
  border: none;
  background: rgba(148, 163, 184, 0.14);
  color: #cbd5e1;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.footer-btn::after {
  border: none;
}

.feedback {
  text-align: center;
  color: #38bdf8;
  font-size: 26rpx;
  min-height: 36rpx;
}
